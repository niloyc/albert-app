<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#fff2743c">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, Niloy"
        android:id="@+id/txt_hello"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:textSize="50dp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_below="@+id/txt_hello"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/btn_link_qr"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ff646464"
        android:gravity="center"
        android:text="Link QR"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:singleLine="false"
        android:layout_below="@+id/txt_hello"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />
    <Button
        android:id="@+id/btn_disp_qr"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ff646464"
        android:gravity="center"
        android:text="Display QR"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@+id/btn_link_qr"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offers nearby,"
        android:id="@+id/txt_offers"
        android:layout_marginTop="30dp"
        android:textColor="#ffffffff"
        android:textSize="25dp"
        android:layout_below="@+id/btn_disp_qr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/list_offers"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/txt_offers"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="#ffffffff" />

</RelativeLayout>
